{
  "name": "lab",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "description": "Collection of React components and templates for building web applications with React Router.",
  "author": "Andrii Skrebets",
  "license": "MIT",
  "homepage": "https://lab.askre.workers.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrskr/lab"
  },
  "bugs": {
    "url": "https://github.com/andrskr/lab/issues"
  },
  "keywords": [
    "cloudflare",
    "ui",
    "components",
    "templates",
    "playground",
    "react-router",
    "react"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production pnpm run lingui:extract && react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "react-router dev",
    "postinstall": "pnpm run cf-typegen",
    "preview": "pnpm run build && vite preview",
    "typecheck": "pnpm run cf-typegen && react-router typegen && tsc -b",
    "lingui:extract": "lingui extract --clean",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "lint:check": "pnpm lint .",
    "lint:fix": "pnpm lint --fix .",
    "format": "prettier --ignore-unknown",
    "format:check": "pnpm format --check .",
    "format:fix": "pnpm format --write .",
    "validate": "npm-run-all --parallel lint:check format:check typecheck"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-beta.2",
    "@fontsource-variable/montserrat": "5.2.6",
    "@lingui/core": "5.4.0",
    "@lingui/detect-locale": "5.4.0",
    "@lingui/macro": "5.4.0",
    "@lingui/react": "5.4.0",
    "@nichtsam/helmet": "0.3.1",
    "@react-router/node": "7.7.1",
    "@react-router/serve": "7.7.1",
    "@tanstack/react-pacer": "0.14.0",
    "accept-language-parser": "1.5.0",
    "content-security-policy-builder": "2.3.0",
    "cross-env": "10.0.0",
    "cva": "1.0.0-beta.2",
    "intl-parse-accept-language": "1.0.0",
    "isbot": "5.1.29",
    "lodash-es": "4.17.21",
    "lucide-react": "0.536.0",
    "raf-schd": "4.0.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-intersection-observer": "9.16.0",
    "react-remove-scroll": "2.7.1",
    "react-router": "7.7.1",
    "tailwind-merge": "3.3.1",
    "type-fest": "4.41.0",
    "use-isomorphic-layout-effect": "1.2.1",
    "use-resize-observer": "9.1.0",
    "zod": "4.0.14"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.1",
    "@eslint-react/eslint-plugin": "1.52.3",
    "@eslint/js": "9.32.0",
    "@lingui/cli": "5.4.0",
    "@lingui/conf": "5.4.0",
    "@lingui/vite-plugin": "5.4.0",
    "@react-router/dev": "^7.7.0",
    "@react-router/remix-routes-option-adapter": "7.7.1",
    "@tailwindcss/vite": "^4.1.4",
    "@types/accept-language-parser": "1.5.8",
    "@types/lodash-es": "4.17.12",
    "@types/node": "^24.2.0",
    "@types/raf-schd": "4.0.3",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitest/eslint-plugin": "1.3.4",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsdoc": "52.0.2",
    "eslint-plugin-jsonc": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-sonarjs": "3.0.4",
    "eslint-plugin-testing-library": "7.6.3",
    "eslint-plugin-unicorn": "60.0.0",
    "globals": "16.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-tailwindcss": "0.6.14",
    "remix-flat-routes": "0.8.5",
    "rollup-plugin-visualizer": "6.0.3",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.39.0",
    "vite": "^7.0.6",
    "vite-plugin-babel-macros": "1.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.28.0"
  }
}
